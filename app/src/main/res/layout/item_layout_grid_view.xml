<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_grid_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_grid_name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/iv_grid_imageView"
        android:layout_below="@+id/iv_grid_imageView"
        android:layout_marginTop="16dp"
        android:fontFamily="cursive"
        android:hint="Name will appear here"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_grid_description"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/tv_grid_name"
        android:layout_below="@+id/tv_grid_name"
        android:layout_marginTop="14dp"
        android:fontFamily="cursive"
        android:hint="Description will appear here"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:textStyle="bold" />

</RelativeLayout>